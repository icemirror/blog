table {
  display: table;
  width: 100%;
  margin: 8px 0 16px;
  border-collapse: collapse;
  border-spacing: 0;
  empty-cells: show;
  font-size: 13px;
  color: #5c6b77;
  thead {
    display: table-header-group;
    vertical-align: middle;
    border-color: inherit;
  }
  tr {
    display: table-row;
    vertical-align: inherit;
    border-color: inherit;
  }
  td, th {
    border: 1px solid #e9e9e9;
    padding: 8px 16px;
    text-align: left
  }
  td:first-child,
  th:first-child {
    background: #fcfcfc;
    font-weight: 500;
    width: 20%
  }
  td {
    border-bottom: 1px solid #eaeefb;
    padding: 10px;
    max-width: 250px;
    line-height: 1.5
  }
  th {
    white-space: nowrap;
    font-weight: 600;
    background: #f7f7f7
  }
}
p {
  text-align: justify;
}